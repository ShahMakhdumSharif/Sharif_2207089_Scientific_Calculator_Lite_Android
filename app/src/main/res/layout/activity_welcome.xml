<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Shah Makhdum Sharif's Scientific Calculator Lite Android Version"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textAlignment="center"
        android:paddingBottom="24dp"
        android:importantForAccessibility="yes" />

    <Button
        android:id="@+id/btn_user_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Login"
        android:layout_marginTop="8dp"
        android:contentDescription="User Login" />

    <Button
        android:id="@+id/btn_admin_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Login"
        android:layout_marginTop="12dp"
        android:contentDescription="Admin Login" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register New User"
        android:layout_marginTop="12dp"
        android:contentDescription="Register New User" />

</LinearLayout>
